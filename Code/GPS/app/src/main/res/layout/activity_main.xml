<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phamh.gps.MainActivity">

    <RelativeLayout
        android:layout_width="304dp"
        android:layout_height="437dp"
        android:keepScreenOn="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textViewLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewGPSLatitude "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewGPSLongitude"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewGPSLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewLabel1"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewLabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewGPSLatitude "
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="Network Location"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewNetworkLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewLabel2"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewNetworkLatitude "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNetworkLongitude"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textAlignment="center" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
